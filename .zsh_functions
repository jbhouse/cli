# improve this to filter out previous usages of hist
function hist() {
  if [ ! -z "$1" ]
    then num=$(history | sort -rn | grep $1 | fzf | sed -n 's/[0-9][0-9]*//p' | sed 's/^[[:space:]]*//g'); 
    else num=$(history | sort -rn | fzf | sed -n 's/[0-9][0-9]*//p' | sed 's/^[[:space:]]*//g'); 
  fi
  eval $num;
}

